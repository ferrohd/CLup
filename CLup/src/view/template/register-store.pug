doctype html
html(lang="en")
    head
        include include/head.pug
        title Register a Store | Customers LineUp
    body
        div.half
            div.banner
            div.content
                a(href="/")
                    img.logo(alt="Customers LineUp" src="/img/logo.png")
                h2 Your safety is our concern

                h1 Welcome on board!

                form#form.input-form(method="POST" action="/register-store")
                    div.half
                        div.column
                            h3 Personal details
                            div.input-field
                                input.validate(name="name" type="text" required)
                                label(for="name") Name
                            div.input-field
                                input.validate(name="surname" type="text" required)
                                label(for="surname") Surname
                            div.input-field
                                input.validate(name="email" type="email" required)
                                label(for="email") Email
                            div.input-field
                                input.validate(name="password" type="password" required)
                                label(for="password") Password
                        div.column
                            h3 Store details
                            div.input-field
                                input.validate(name="storeName" type="text" required)
                                label(for="storeName") Store Name
                            div.input-field
                                input.validate(name="address" type="text" required)
                                label(for="address") Store Address
                            div.input-field
                                input.validate(name="vat" type="number" required)
                                label(for="vat") VAT number
                            div.input-field
                                input.validate(name="capacity" type="number" required)
                                label(for="capacity") Capacity

                button#form-btn.waves-effect.waves-light.btn.primary.limited(type="submit" form="form") Register
                h3 Are you a customer? 
                    a(href="/register") Sign Up Now

                h3 Website created by 
                    a(href="https://github.com/ferrohd") Alessandro Ferrara
                    |  and 
                    a(href="https://github.com/lorenzofratus") Lorenzo Fratus

        include include/script.pug